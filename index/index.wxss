/**index.wxss**/

.barrage{
  z-index: 3;
  height: 200rpx;
  width: 100%;
  position: absolute;
  pointer-events: none;  /*穿透*/
}

.bottom{
  position: absolute;
  left: 3%;
  bottom: 30rpx;
  width: 94%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #FFF;
  border: 2rpx solid #000;
  border-radius: 30rpx;
  border-right: 0;
}

.bottom > input {
  width: 80%;
  padding: 10rpx 30rpx;
}

.bottom > view {
  width: 20%;
  padding: 10rpx;
  border-radius: 30rpx;
  text-align: center;
  border: 2rpx solid #000;
}

.item{
  position: absolute;
  white-space: nowrap;/* 防止向下换行*/
  animation-timing-function: linear;
  animation-fill-mode: none;
}

@keyframes animate{
  from {left: 100%; }
  to {left: -100%;}
}
